    <!-- Scripts personalizados optimizados -->
    <script>
        // Scroll to top
        const scrollToTop = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 200) { // Reducido de 300
                scrollToTop.classList.add('show');
            } else {
                scrollToTop.classList.remove('show');
            }
        });

        scrollToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Animación de carga más sutil
        window.addEventListener('load', () => {
            document.body.style.opacity = '0';
            setTimeout(() => {
                document.body.style.transition = 'opacity 0.3s'; // Reducido de 0.5s
                document.body.style.opacity = '1';
            }, 50); // Reducido de 100
        });

        // Navegación activa optimizada
        document.addEventListener('DOMContentLoaded', () => {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                const linkPath = new URL(link.href).pathname;
                if (linkPath === currentPath || (currentPath === '/' && linkPath === '/')) {
                    link.classList.add('active');
                }
            });
        });

        // Efecto de hover optimizado en cards
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)'; // Reducido de -5px
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });

        // Efecto de pulso en navbar brand
        document.addEventListener('DOMContentLoaded', () => {
            const brand = document.querySelector('.navbar-brand');
            if (brand) {
                brand.style.position = 'relative';
            }
        });
    </script>
